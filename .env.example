# =============================================================================
# Privacy Fitness Tracker - Environment Configuration
# =============================================================================
#
# SECURITY WARNING: Never commit actual .env file to version control!
# This is a template file. Copy to .env and fill in your actual values.
#
# Usage: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# WALLET CONFIGURATION
# -----------------------------------------------------------------------------
# Private key for deployment (WITHOUT 0x prefix)
# Security: Use a dedicated deployment wallet, not your main wallet
# Security: Never share or commit this value
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# -----------------------------------------------------------------------------
# RPC ENDPOINTS
# -----------------------------------------------------------------------------
# Sepolia Testnet RPC URL
# Get API key from: https://www.alchemy.com or https://infura.io
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY

# Zama fhEVM Devnet RPC URL
ZAMA_RPC_URL=https://devnet.zama.ai

# Mainnet RPC URL (for production deployment)
# Security: Use separate RPC for mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# -----------------------------------------------------------------------------
# API KEYS
# -----------------------------------------------------------------------------
# Etherscan API Key (for contract verification)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API Key (for gas reporting in USD)
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Codecov Token (for coverage reporting)
# Get from: https://codecov.io
CODECOV_TOKEN=your_codecov_token_here

# -----------------------------------------------------------------------------
# GAS REPORTING
# -----------------------------------------------------------------------------
# Enable gas reporting (true/false)
REPORT_GAS=false

# Gas report output file
GAS_REPORT_FILE=gas-report.txt

# Gas price tracking
GAS_PRICE_API=https://api.etherscan.io/api?module=proxy&action=eth_gasPrice

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Default membership type for testing
MEMBERSHIP_TYPE=Premium

# Contract deployment settings
DEPLOYMENT_NETWORK=sepolia
DEPLOYMENT_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# Enable security audit during deployment
ENABLE_SECURITY_AUDIT=true

# Maximum gas limit for transactions (DoS protection)
MAX_GAS_LIMIT=30000000

# Maximum contract size (24KB = 24576 bytes)
MAX_CONTRACT_SIZE=24576

# Rate limiting for API calls (requests per minute)
RATE_LIMIT_RPM=100

# -----------------------------------------------------------------------------
# PERFORMANCE OPTIMIZATION
# -----------------------------------------------------------------------------
# Solidity optimizer runs (higher = more gas efficient for frequent calls)
OPTIMIZER_RUNS=800

# Enable via-IR compilation (better optimization)
ENABLE_VIA_IR=true

# EVM version target
EVM_VERSION=cancun

# -----------------------------------------------------------------------------
# TESTING CONFIGURATION
# -----------------------------------------------------------------------------
# Test timeout in milliseconds
TEST_TIMEOUT=40000

# Enable parallel test execution
TEST_PARALLEL=false

# Test coverage threshold percentage
COVERAGE_THRESHOLD=80

# -----------------------------------------------------------------------------
# PAUSER CONFIGURATION
# -----------------------------------------------------------------------------
# Emergency pause functionality
# IMPORTANT: Set these for production deployment

# Primary pauser address (contract owner by default)
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Secondary pauser address (backup admin)
SECONDARY_PAUSER=0x0000000000000000000000000000000000000000

# Pause timeout (seconds before auto-unpause)
PAUSE_TIMEOUT=86400

# Enable emergency pause on deployment
ENABLE_PAUSE_ON_DEPLOY=false

# Pauser role management
PAUSER_ROLE_ADMIN=0x0000000000000000000000000000000000000000

# -----------------------------------------------------------------------------
# ACCESS CONTROL
# -----------------------------------------------------------------------------
# Admin addresses for contract management
ADMIN_ADDRESS=0x0000000000000000000000000000000000000000
OPERATOR_ADDRESS=0x0000000000000000000000000000000000000000

# Multi-sig wallet for sensitive operations
MULTISIG_WALLET=0x0000000000000000000000000000000000000000

# Minimum signatures required
MULTISIG_THRESHOLD=2

# -----------------------------------------------------------------------------
# MONITORING & ALERTS
# -----------------------------------------------------------------------------
# Enable monitoring
ENABLE_MONITORING=true

# Alert email for critical events
ALERT_EMAIL=admin@example.com

# Webhook URL for notifications
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# API endpoint for frontend
API_ENDPOINT=http://localhost:3000

# WebSocket endpoint
WS_ENDPOINT=ws://localhost:3000

# Enable CORS
ENABLE_CORS=true

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (if using off-chain storage)
# -----------------------------------------------------------------------------
# Database URL
DATABASE_URL=postgresql://user:password@localhost:5432/fitness_tracker

# Redis URL (for caching)
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# IPFS CONFIGURATION (for metadata storage)
# -----------------------------------------------------------------------------
# IPFS Gateway URL
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Pinata API keys (for IPFS pinning)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Enable debug mode
DEBUG=false

# Verbose logging
VERBOSE=false

# Skip tests during deployment
SKIP_TESTS=false

# Dry run mode (simulate without actual deployment)
DRY_RUN=false

# -----------------------------------------------------------------------------
# CI/CD SETTINGS
# -----------------------------------------------------------------------------
# CI environment detection
CI=false

# GitHub Actions
GITHUB_TOKEN=your_github_token_here

# Deployment automation
AUTO_DEPLOY=false
AUTO_VERIFY=true

# -----------------------------------------------------------------------------
# SECURITY BEST PRACTICES
# -----------------------------------------------------------------------------
# 1. Never commit .env file to git
# 2. Use different keys for testnet and mainnet
# 3. Rotate keys regularly (every 90 days recommended)
# 4. Use hardware wallet for mainnet deployments
# 5. Enable 2FA on all service accounts
# 6. Review all transactions before signing
# 7. Keep backups of all keys in secure offline storage
# 8. Use environment-specific .env files (.env.development, .env.production)
# 9. Audit all contract interactions before mainnet deployment
# 10. Monitor contract events and transactions post-deployment

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
